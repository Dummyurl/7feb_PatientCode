<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price breakup"
        android:textAlignment="center"
        android:padding="@dimen/padding_10"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_test_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 Tests Selected"
        android:padding="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginLeft="@dimen/padding_15"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layout_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_15"
        android:layout_below="@+id/text_test_number"
        android:gravity="center_vertical"
        android:visibility="visible">
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:background="@color/greyshade"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="@dimen/padding_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Total price"
                android:layout_marginLeft="@dimen/padding_15"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey" />
            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Rs.500"
                android:layout_marginRight="@dimen/padding_15"
                android:textAlignment="textEnd"
                android:textColor="@color/dark_grey" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="OK"
            android:layout_margin="@dimen/padding_5"
            android:textColor="@color/white"
            android:background="@drawable/my_gradient_back"
            android:layout_marginTop="@dimen/padding_15"/>














</LinearLayout>
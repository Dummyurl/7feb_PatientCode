<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/my_gradient_back"
        android:orientation="horizontal"
        android:padding="40dp"
        android:weightSum="2">

        <!-- <com.ziffytech.util.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_app_logo_round"
            android:adjustViewBounds="true"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail_image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dimen_2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mahesh Bhople"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="maheshbhople@gmail.com"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/btnpersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:text="My Personal Details"
            android:textSize="14dp"
            android:padding="13dp"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/btnMedicalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:padding="13dp"
            android:layout_marginLeft="25dp"
            android:text="My Medical Details"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/btnLifeStyleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:padding="13dp"
            android:layout_marginLeft="25dp"
            android:text="My Life style Details"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/btnFamilyMebers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:padding="13dp"
            android:layout_marginLeft="25dp"
            android:text="My Family Members"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/btnMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:padding="13dp"
            android:layout_marginLeft="25dp"
            android:text="My Medication Details"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbackground"
            android:padding="13dp"
            android:layout_marginLeft="25dp"
            android:text="Update Profile"
            android:textSize="14dp" />


    </LinearLayout>


    <include layout="@layout/commonfooter" />


</LinearLayout>
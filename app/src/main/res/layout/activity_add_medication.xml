<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground">

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fb_button"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Never lose your medical records"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you are having any previous medicine please upload here."
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="@color/greyshade"
            android:layout_marginTop="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/padding_5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Title"
                android:id="@+id/txtTitle"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@color/greyshade"
                android:textSize="12dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Description"
                android:id="@+id/txtDesc"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@color/greyshade"
                android:textSize="12dp"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageview"
            android:visibility="visible"
            android:src="@drawable/ic_image_placeholder"
            android:layout_gravity="center"
            android:text="Click here to upload Doctor prescription"
            android:layout_width="100dp"
            android:layout_height="100dp" />



        <TextView
            android:layout_toRightOf="@+id/imageview"
            android:textSize="14sp"
            android:layout_margin="30dp"
            android:id="@+id/text"
            android:layout_gravity="center"
            android:text="Click here to select record photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llbtn"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:padding="10dp"
       android:layout_margin="15dp"
        android:background="@drawable/fb_button">




    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:text="UPLOAD"
        android:textColor="@color/colorTextWhite"
        android:background="@drawable/my_gradient_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
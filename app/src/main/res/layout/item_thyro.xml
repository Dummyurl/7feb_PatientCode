<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="13dp">

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"></View>
-->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST NAME"
                android:textSize="12sp"
                android:maxLines="1"
                android:maxEms="20"
                android:paddingLeft="10dp"
                android:textColor="@color/black_dark"/>

            <TextView
                android:id="@+id/package_test_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/package_name"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:textSize="10dp"
                android:text="Includes 10 Test"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tyrocare"
                    android:id="@+id/imgv_pack_lab" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="5sp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/green"
                    android:drawableLeft="@drawable/ic_favourites"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NABL,ISO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/green"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Rs. 12345  "
                        android:textSize="13sp"
                        android:paddingTop="2dp"
                        android:textColor="@color/opaque_black"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/package_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/package_name"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:textSize="8dp"
                        android:text="25% OFF 50% Coupen Discount"
                        android:textColor="@color/green"
                        android:background="@drawable/dottedstroke"
                        android:gravity="center_horizontal"

                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/txtv_add_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="right|bottom"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1.3"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>



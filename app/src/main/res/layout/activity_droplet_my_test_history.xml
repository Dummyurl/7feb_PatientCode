<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10001245845"
                android:paddingRight="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:textColor="@color/black_dark"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textStyle="bold"
                android:paddingRight="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_5"
                android:paddingTop="3dp"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="August 31,2018"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_5"
                    android:textColor="@color/black_dark"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11.00AM-12.00AM"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingTop="3dp"
                    android:textColor="@color/black_dark"
                    android:textSize="12sp"
                    android:layout_weight="0.5"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_10"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@color/view_bg"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_5"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.4000"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/padding_5"
                        android:paddingLeft="@dimen/padding_5"
                        android:paddingTop="3dp"
                        android:textColor="@color/black_dark"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:layout_weight="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CASH"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/padding_5"
                        android:paddingLeft="@dimen/padding_5"
                        android:paddingTop="3dp"
                        android:textColor="@color/grey"
                        android:textSize="10sp"
                        android:gravity="end"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_10"
                android:paddingRight="@dimen/padding_15"
                android:paddingLeft="@dimen/padding_15"
                android:background="@color/view_bg"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="No special preparations required."
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingRight="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_5"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_5"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@color/view_bg"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lab Name"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingTop="@dimen/padding_5"
                    android:textColor="@color/black_dark"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:paddingRight="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_5"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@color/view_bg"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

            <!--    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Test Name"
                    android:textSize="12sp"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Cancel Test"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:padding="@dimen/padding_5"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#5fcaf4" />-->


                <ListView
                    android:id="@+id/test_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>






        </LinearLayout>


    </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>
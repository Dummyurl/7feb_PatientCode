<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ziffytech.activities.TestResult">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="1"
       android:layout_marginTop="@dimen/padding_10"
       android:layout_marginRight="@dimen/padding_10"
       android:layout_marginLeft="@dimen/padding_10">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.7"
          android:padding="5dp"
          android:text="Test Name"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/testname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.3"
          android:padding="5dp"
          android:text="Observation"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />




   </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/light_grey"
       android:padding="1dp"></View>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="1"
       android:id="@+id/row1"
       android:layout_marginRight="@dimen/padding_10"
       android:layout_marginLeft="@dimen/padding_10">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.7"
          android:padding="5dp"
          android:text="Date"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.3"
          android:padding="5dp"
          android:text="Observation"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />


   </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/light_grey"
       android:padding="1dp"></View>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="1"
       android:layout_marginRight="@dimen/padding_10"
       android:layout_marginLeft="@dimen/padding_10">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.7"
          android:padding="5dp"
          android:text="Given By"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/givenby"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.3"
          android:padding="5dp"
          android:text="Observation"
          android:textAlignment="center"
          android:textColor="@color/dark_grey"
          android:textSize="11sp" />




   </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/light_grey"
       android:padding="1dp"></View>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/recyclerviewTestResult"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/padding_10">
   </android.support.v7.widget.RecyclerView>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="5dp"
       android:textAlignment="center"
       android:text="Note : Please click on view to see graph"
       android:textColor="@color/colorPrimary"
       android:textSize="12sp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ziffytech.activities.ehrdump2"
    android:background="@color/appbackground">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerInParent="true">


   <ImageView
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:src="@drawable/folder"
       android:padding="10dp"
       android:layout_margin="10dp"
      android:layout_gravity="center_horizontal"
       android:id="@+id/ehrimagehead"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ehrimagehead"
       android:orientation="vertical">


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Backup EHR"
             android:layout_gravity="center_horizontal"
             android:gravity="center_horizontal"
             android:textSize="16dp"
             android:textStyle="bold"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="( Previous Lab Test Report From Associated Laboratries )"
          android:layout_gravity="center_horizontal"
          android:gravity="center_horizontal"
          android:textSize="10dp"
          android:layout_marginTop="10dp"
          android:textColor="@color/light_grey"
          />


      <CheckBox
          android:id="@+id/chkehr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" I agree"
          android:checked="true"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:layout_marginTop="25dp"
          android:textColor="@color/grey"
          android:textSize="12dp"
          />

      <TextView
          android:id="@+id/textView10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="5dp"
          android:gravity="center_horizontal"
          android:text="Restore my EHR from associated laboratries\nIf you don't get it now you won't be able to get\n historic EHR later."
          android:textColor="@color/grey"
          android:textSize="12dp" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_margin="10dp"
          android:layout_gravity="center_horizontal">

         <TextView
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Restore"
             android:layout_weight="1"
             android:background="@drawable/my_gradient_back"
             android:padding="10dp"
             android:textColor="@color/white"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_margin="10dp"
             android:id="@+id/txtv_restore"
             />

         <TextView
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Skip"
             android:layout_weight="1"
             android:background="@drawable/my_gradient_back"
             android:padding="10dp"
             android:textColor="@color/white"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_margin="10dp"
             android:id="@+id/txtv_skipp"/>



      </LinearLayout>





   </LinearLayout>

   </LinearLayout>




</RelativeLayout>

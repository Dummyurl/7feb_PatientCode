<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_scanin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:padding="5dp"
    android:background="@drawable/fb_button"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_5"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:padding="15dp"/>

                <LinearLayout
                    android:id="@+id/titlell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctor Name"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp"/>


                    <TextView
                        android:id="@+id/degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:text="Degree"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:weightSum="1"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/charges"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100-200"
                                android:textSize="10sp"
                                android:layout_weight="0.2"
                                android:textColor="@color/grey"
                                android:drawableLeft="@drawable/ic_rupee_doc_list"
                                android:drawablePadding="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txt_avail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:drawablePadding="5dp"
                                android:text="8.00 AM-10.00 PM"
                                android:textColor="@color/grey"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="10sp"
                        android:layout_weight="0.2"
                        android:textColor="@color/grey"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_location_pin"
                        android:drawablePadding="5dp"
                        />

                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distance : "
                            android:textSize="10sp"
                            android:layout_weight="0.2"
                            android:textColor="@color/grey"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:drawableLeft="@drawable/ic_location_pin"
                            android:drawablePadding="5dp"
                            />

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyshade"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/padding_5"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/book"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="@dimen/padding_5"
                    android:background="@drawable/my_gradient_back"
                    android:text="Book Appointment"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginRight="@dimen/padding_5"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
            <Button
                android:id="@+id/book1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@drawable/my_gradient_back"
                android:text="Call now"
                android:gravity="center"

                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/padding_5"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
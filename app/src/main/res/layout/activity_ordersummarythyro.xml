<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/flippertwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/txtv_patientName"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Indra Kumar Zha "
                                android:drawableLeft="@drawable/tyrocont"
                                android:drawablePadding="@dimen/dimen_10dp"/>

                            <TextView
                                android:id="@+id/txtv_mob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:padding="5dp"
                                android:text="( 9890729053 )"
                                android:textColor="@color/grey"
                                android:textSize="12dp" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/txtv_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:text="Flat No.553, Amanora future towers,\nHadapsar,Pune"
                            android:textColor="@color/grey"
                            android:drawableLeft="@drawable/tyroadd"
                            android:drawablePadding="@dimen/dimen_10dp"

                            />

                        <TextView
                            android:id="@+id/bookedTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friday , 25 Dec 2018"
                            android:textColor="@color/grey"
                            android:padding="5dp"
                            android:textSize="11dp"
                            android:drawableLeft="@drawable/tyrocal"
                            android:drawablePadding="@dimen/dimen_10dp"/>
                    </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/imgv_pack_lab"
                                android:layout_width="91dp"
                                android:layout_height="40dp"
                                android:src="@drawable/tyrocare"
                                android:layout_marginLeft="10dp"/>

                            <TextView
                                android:id="@+id/txtv_add_package"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal|bottom"
                                android:gravity="left|center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:text="Thyrocare Laboratories Ltd."
                                android:textColor="@color/black_dark"
                                android:textSize="12sp" />

                        </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:id="@+id/recyclerview_thyro_carttest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>



                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="@dimen/padding_10"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:background="@color/grey">

                                </View>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="Actual Total Price : "
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/total_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text="@string/currency_zero"
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:textSize="12dp"
                                        android:text="Service TAX : "
                                        android:textColor="@color/grey"
                                         />


                                    <TextView
                                        android:id="@+id/text_tax"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text="@string/currency_zero"
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:background="@color/grey"
                                    android:visibility="gone"></View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="Discount and savings : "
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/txtv_total_discount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text="@string/currency_zero"
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:background="@color/grey"
                                    android:visibility="gone"></View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:visibility="gone">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="Ziffy Wallet Balance : "
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/txtv_amt_payble"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text="@string/currency_zero"
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:background="@color/grey"
                                    android:layout_marginRight="@dimen/padding_10"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:visibility="gone"></View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="gone">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="Coupon code amount : "
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/txtv_items_count"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text="@string/currency_zero"
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:background="@color/grey"></View>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginTop="2dp">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="Total payable amount :"
                                        android:textColor="@color/green"
                                        android:textSize="12dp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:id="@+id/final_total"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:padding="5dp"
                                        android:text=" "
                                        android:textColor="@color/grey"
                                        android:textSize="12dp" />

                                </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.3dp"
                                        android:background="@color/grey"
                                        >

                                    </View>

                                    </LinearLayout>

                     </LinearLayout>

                </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/shadow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:paddingLeft="15dp">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="To be Paid :"
            android:paddingBottom="3dp"
              android:textColor="@color/colorPrimary"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Rs."
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txtv_carttotal"
                />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="CHECKOUT"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="17dp"
            android:id="@+id/txtv_checkout"/>


    </LinearLayout>

</RelativeLayout>